<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="22dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Logo -->
            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="81dp"
                android:layout_height="77dp"
                android:layout_marginTop="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_logo" />

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/welcome_text"
                android:textColor="#1A1A2C"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="Welcome to\nElektroniCare" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitle_text"
                android:textColor="#646578"
                android:textSize="16sp"
                android:layout_marginBottom="45dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Your trusted partner in electronic repairs" />

            <!-- Features Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:orientation="vertical">

                <!-- First row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <!-- Expert Technicians -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/feature_background"
                        android:paddingVertical="20dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/ic_technician"
                            />

                        <TextView
                            android:textColor="#1A1A2C"
                            android:textSize="14sp"
                            android:textStyle=""
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Expert Technicians" />
                    </LinearLayout>

                    <!-- Fast Service -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/feature_background"
                        android:paddingVertical="20dp"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/ic_clock" />

                        <TextView
                            android:textColor="#1A1A2C"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Fast Service" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Second row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Genuine Parts -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/feature_background"
                        android:paddingVertical="20dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/ic_parts" />

                        <TextView
                            android:textColor="#1A1A2C"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Genuine Parts" />
                    </LinearLayout>

                    <!-- Warranty -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/feature_background"
                        android:paddingVertical="20dp"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/ic_warranty" />

                        <TextView
                            android:textColor="#1A1A2C"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Warranty" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Create Account Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/create_account_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_purple"
                android:text="Create Account"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="normal"
                android:paddingVertical="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Sign In Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_white"
                android:text="Sign In"
                android:textColor="#7C3AED"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="normal"
                android:paddingVertical="16dp"
                android:layout_marginBottom="30dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
