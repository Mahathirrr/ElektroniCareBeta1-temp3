<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background_white"
    android:padding="16dp"
    android:layout_marginBottom="16dp">

    <!-- Header with Image and Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/centerImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/centerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#111827"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star"
                    app:tint="@color/star_yellow"/>

                <TextView
                    android:id="@+id/centerRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4B5563"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"/>

                <TextView
                    android:id="@+id/reviewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4B5563"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Now"
                android:textColor="#7C3AED"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/workingHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6B7280"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Location -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_location_pin"
            app:tint="#4B5563"/>

        <TextView
            android:id="@+id/centerAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4B5563"
            android:textSize="12sp"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

    <!-- Service Tags -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/serviceTagsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="16dp"
        app:flexWrap="wrap"
        app:alignItems="flex_start"
        app:flexDirection="row"/>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/viewDetailsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Details"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="@drawable/button_purple"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/bookNowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:textColor="#7C3AED"
            android:textSize="12sp"
            android:background="@drawable/button_outline"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>

    </LinearLayout>

</LinearLayout>